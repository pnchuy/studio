rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isManagerOrAdmin() {
      // Check if the user is a manager or admin by looking up their role in the users collection.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'MANAGER'];
    }

    match /users/{userId} {
      allow read: if true; // Allow public read for user profiles to display author names, etc.
      allow create: if request.auth != null; // Allow any authenticated user to create their own profile
      allow update: if request.auth.uid == userId || isManagerOrAdmin(); // User can update their own profile, or an admin/manager can
      allow delete: if isManagerOrAdmin(); // Only admin/manager can delete users
    }

    match /books/{bookId} {
      allow read: if true;
      allow create, update, delete: if isManagerOrAdmin();
    }

    match /authors/{authorId} {
      allow read: if true;
      allow create, update, delete: if isManagerOrAdmin();
    }

    match /genres/{genreId} {
      allow read: if true;
      allow create, update, delete: if isManagerOrAdmin();
    }
    
    match /series/{seriesId} {
      allow read: if true;
      allow create, update, delete: if isManagerOrAdmin();
    }

    // System settings, e.g., logo URL
    match /system/settings {
        allow read: if true;
        allow write: if isManagerOrAdmin();
    }
  }
}
