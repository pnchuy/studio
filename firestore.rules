
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Function to check if the user is an Admin or Manager
    function isManagerOrAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ADMIN', 'MANAGER'];
    }

    // Books can be read by anyone, but only modified by admins/managers.
    match /books/{bookId} {
      allow read: if true;
      allow write: if isManagerOrAdmin();
    }

    // Users can be read by any authenticated user.
    // A user can create their own profile.
    // A user can only update their own profile.
    // Only Admins can change roles or delete users.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if request.auth.uid == userId;
      allow delete: if isManagerOrAdmin();
    }
    
    // Authors, Genres, and Series can only be managed by Admins or Managers.
    match /authors/{authorId} {
      allow read: if true;
      allow write: if isManagerOrAdmin();
    }

    match /genres/{genreId} {
      allow read: if true;
      allow write: if isManagerOrAdmin();
    }

    match /series/{seriesId} {
      allow read: if true;
      allow write: if isManagerOrAdmin();
    }
  }
}
