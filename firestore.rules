rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to collections needed for browsing the library
    match /books/{bookId} {
      allow read: if true;
      allow write: if false; // Disallow all writes by default
    }

    match /authors/{authorId} {
      allow read: if true;
      allow write: if false;
    }

    match /genres/{genreId} {
      allow read: if true;
      allow write: if false;
    }

    match /series/{seriesId} {
        allow read: if true;
        allow write: if false;
    }

    // Secure the users collection
    match /users/{userId} {
      // Only the authenticated user can read their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      // Creation is handled by backend logic (Cloud Functions or Admin SDK),
      // so client-side creation is disallowed.
      allow create: if request.auth != null;
       // Only the authenticated user can update their own document, but not their role
      allow update: if request.auth != null && request.auth.uid == userId && resource.data.role == request.resource.data.role;
      // Disallow client-side deletion
      allow delete: if false;
    }

    // Default deny for any other path
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
